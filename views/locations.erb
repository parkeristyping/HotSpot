<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>HotSpot</title>
    <style>
      html, body, #map-canvas {
        /*height: 100%;*/
        margin: 0px;
        padding: 0px;
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: 1;
      }
      #sidebar {
        /*height: 85%;*/
        height: 100%;
        width: 360px;
        position: absolute;
        /*margin-left: 0px;*/
        /*margin-top: 15px;*/
        vertical-align: left;
        opacity: 1;
        z-index: 2;
        background-image: url("http://hereisahand.com/img/paper 2.png");
      }

      ul.hawtspots {
        font-size: 20px;
        margin-top: 200px;
        margin-left: 30px;
      }

      .pop-out {
        font-family: sans-serif;
      }
      .post-wrap {
        width: 320px;
        display: block;
        border-style: solid;
      }
      h2.loc-name {
        /*display: block;*/
        /*border-style: solid;*/
      }
      .post-thumb {
        display: block;
        border-style: solid;
      }
      .user {
        font-weight: bold;
        /*display: block;*/
        /*border-style: solid;*/
      }
      .post-caption {
        /*display: block;*/
        /*border-style: solid;*/
      }

    </style>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
    <script>
      function initialize() {
        var myLatlng = new google.maps.LatLng(40.727231, -73.984195);
        var mapOptions = {
          zoom: 8,
          center: myLatlng,
          disableDefaultUI: true,
          panControl: false,
          zoomControl: true,
          mapTypeControl: false,
          scaleControl: true,
          streetViewControl: false,
          overviewMapControl: true
        };

        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        var locations = <%= LocationList.create(@locations) %>;

        var infowindow = new google.maps.InfoWindow();

        var image = 'http://hereisahand.com/img/flame.png';

        var marker, i;

        for (i = 0; i < locations.length; i++) {  
          marker = new google.maps.Marker({
            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
            map: map,
            icon: image
          });

          google.maps.event.addListener(marker, 'click', (function(marker, i) {
            return function() {
              infowindow.setContent(locations[i][0]);
              infowindow.open(map, marker);
            }
          })(marker, i));
        }
      }

      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  </head>
  <body>
    <div id="sidebar">
      <ul class="hawtspots">
        <% @locations.each do |location| %>
        <li><%= location.name %></li>
        <% end %>
      </ul>
    </div>
    <div id="map-canvas"></div>
  </body>
</html>